<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- 1. Tạo bảng Admin (quản trị viên) -->
    <changeSet id="2026-01-09-initial-database-01" author="toanld">
        <createTable tableName="admin">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 2. Tạo bảng Student (học viên) -->
    <changeSet id="2026-01-09-initial-database-02" author="toanld">
        <createTable tableName="student">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="dob" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="sex" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="DATE" defaultValueComputed="CURRENT_DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 3. Tạo bảng Course (Khóa học) -->
    <changeSet id="2026-01-09-initial-database-03" author="toanld">
        <createTable tableName="course">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="instructor" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="DATE" defaultValueComputed="CURRENT_DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 4. Tạo bảng Enrollment (Đăng ký khóa học) -->
    <changeSet id="2026-01-09-initial-database-04" author="toanld">
        <createTable tableName="enrollment">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="student_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(10)" defaultValue="WAITING">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 5. Thêm foreign key từ enrollment đến student -->
    <changeSet id="2026-01-09-initial-database-05" author="toanld">
        <addForeignKeyConstraint
                baseTableName="enrollment"
                baseColumnNames="student_id"
                constraintName="fk_enrollment_student"
                referencedTableName="student"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- 6. Thêm foreign key từ enrollment đến course -->
    <changeSet id="2026-01-09-initial-database-06" author="toanld">
        <addForeignKeyConstraint
                baseTableName="enrollment"
                baseColumnNames="course_id"
                constraintName="fk_enrollment_course"
                referencedTableName="course"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
